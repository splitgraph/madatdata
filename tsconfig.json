{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "importsNotUsedAsValues": "error",
    "incremental": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@madatdata/root/*": ["*"],
      "@madatdata/yeet/*": ["./packages/yeet/*"],
      "@madatdata/ast-parser/*": ["./packages/ast-parser/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".*",
    "public",
    "dist",
    "packages/tiny-react-sandbox/www/dist"
  ],
  "include": ["packages/**/*.js", "packages/**/*.ts", "packages/**/*.tsx"]
}
